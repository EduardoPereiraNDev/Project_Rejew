<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/orange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogoRejew">


    <View
        android:id="@+id/view4"
        android:layout_width="416dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="75dp"
       />

    <ImageView
        android:id="@+id/rejewlogocat"
        android:layout_width="134dp"
        android:layout_height="75dp"
        android:src="@drawable/rejewazulescuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/pesquisacinza"
        android:hint="@string/pesquiseLivros"
        android:paddingLeft="15dp"
        android:textColor="@color/orange"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/lupapreta"
        app:layout_constraintBottom_toBottomOf="@+id/editText6"
        app:layout_constraintEnd_toEndOf="@+id/editText6"
        app:layout_constraintTop_toTopOf="@+id/editText6" />

    <ImageView
        android:id="@+id/aventura"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/aventura" />


    <TextView
        android:id="@+id/textaventura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Aventura"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/merriweather_bold"
        app:layout_constraintTop_toBottomOf="@+id/aventura" />

    <ImageView
        android:id="@+id/terror"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/terror" />


    <TextView
        android:id="@+id/textterror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/merriweather_bold"
        android:text="Terror"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aventura"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/romance"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/romance" />


    <TextView
        android:id="@+id/textromance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/merriweather_bold"
        android:text="Romance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aventura" />

    <ImageView
        android:id="@+id/ficcaocienti"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/fcientifica" />


    <TextView
        android:id="@+id/textficcaocienti"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/merriweather_bold"
        android:text="Ficção- Científica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aventura" />

    <ImageView
        android:id="@+id/culinaria"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/culinaria" />


    <TextView
        android:id="@+id/textculinaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="328dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/merriweather_bold"
        android:text="Culinaria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aventura" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/chat"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintVertical_bias="0.523"
        app:srcCompat="@drawable/chatbrancooooo" />

    <ImageView
        android:id="@+id/homeicon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:srcCompat="@drawable/casaazulll" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="359dp"
        android:layout_height="179dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278"
        app:srcCompat="@drawable/livrosnovos" />

    <ImageView
        android:id="@+id/pessoasicon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintVertical_bias="0.523"
        app:srcCompat="@drawable/amigosbrancooo" />

    <FrameLayout
        android:layout_width="355dp"
        android:layout_height="185dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862">

            <RelativeLayout
            android:id="@+id/containerit"
            android:layout_width="145dp"
            android:layout_height="165dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/fundoum"
                android:layout_width="125dp"
                android:layout_height="90dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="35dp"
                android:background="@color/cinzait" />

            <ImageView
                android:id="@+id/livroum"
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/itcapa" />

            <TextView
                android:id="@+id/ittitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="125dp"
                android:fontFamily="@font/merriweather_bold"
                android:text="It: A Coisa"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itautor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="145dp"
                android:fontFamily="@font/merriweather_light_italic"
                android:text="Stephen King"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/containerter"
            android:layout_width="145dp"
            android:layout_height="185dp"
            android:layout_marginStart="200dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/fundodois"
                android:layout_width="125dp"
                android:layout_height="90dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="35dp"
                android:background="@color/terran" />

            <ImageView
                android:id="@+id/livrodois"
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/livro" />

            <TextView
                android:id="@+id/tertitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="125dp"
                android:fontFamily="@font/merriweather_bold"
                android:text="O Rei da Terra do Nunca"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/terautor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="165dp"
                android:fontFamily="@font/merriweather_light_italic"
                android:text="Nikki ST. Crowe"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>