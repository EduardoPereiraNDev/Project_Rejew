                android:textColor="@color/orange"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotoperfil" />

            <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/lupapreta"
        app:layout_constraintBottom_toBottomOf="@+id/areademensagem"
        app:layout_constraintEnd_toEndOf="@+id/areademensagem"
        app:layout_constraintTop_toTopOf="@+id/areademensagem" />

    <ImageView
        android:id="@+id/aventura"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
