                <RelativeLayout
                    android:id="@+id/containerter2"
                    android:layout_width="145dp"
                    android:layout_height="185dp"
                    android:layout_marginStart="200dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/fundodois2"
                        android:layout_width="125dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="35dp"
                        android:background="@color/marromlev" />

                    <ImageView
                        android:id="@+id/livrodois2"
                        android:layout_width="90dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/levecapa" />

                    <TextView
                        android:id="@+id/tertitulo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="125dp"
                        android:fontFamily="@font/merriweather_bold"
                        android:text="Leve Minha Alma"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/terautor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="165dp"
                        android:fontFamily="@font/merriweather_light_italic"
                        android:text="Harley Laroux"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </RelativeLayout>
        </FrameLayout>

