<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdapterPerfilUsuarioP">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fotoFundo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/imagedefaultdeitadaa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/imagedefault"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nomeUsuario"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="NOME DO USUARIO"
            android:textAlignment="center"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fotoPerfil" />

        <TextView
            android:id="@+id/comentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="ComentÃ¡rios"
            android:textSize="17dp"
            app:layout_constraintEnd_toStartOf="@+id/seguidores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeUsuario" />

        <TextView
            android:id="@+id/seguidores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Seguidores"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeUsuario" />

        <TextView
            android:id="@+id/seguindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Seguindo"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seguidores"
            app:layout_constraintTop_toBottomOf="@+id/nomeUsuario" />

        <TextView
            android:id="@+id/comentariosQTD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/comentarios"
            app:layout_constraintStart_toStartOf="@+id/comentarios"
            app:layout_constraintTop_toBottomOf="@+id/comentarios" />

        <TextView
            android:id="@+id/seguidoresQTD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/seguidores"
            app:layout_constraintStart_toStartOf="@+id/seguidores"
            app:layout_constraintTop_toBottomOf="@+id/seguidores" />

        <TextView
            android:id="@+id/seguindoQTD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="0"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/seguindo"
            app:layout_constraintStart_toStartOf="@+id/seguindo"
            app:layout_constraintTop_toBottomOf="@+id/nomeUsuario" />

        <TextView
            android:id="@+id/bio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="AAAAAAAAA"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seguidoresQTD" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>