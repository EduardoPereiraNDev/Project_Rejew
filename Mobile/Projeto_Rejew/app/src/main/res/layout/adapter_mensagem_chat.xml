<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/msguser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@drawable/borda_msg_chat"
        android:minWidth="140dp"
        android:maxWidth="200dp"
        android:minHeight="70dp"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/msgoutros"
        android:minWidth="140dp"
        android:maxWidth="200dp"
        android:minHeight="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/borda_msg_chat"
        android:padding="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeuser2"
        android:layout_width="wrap_content"
        android:maxWidth="130dp"
        android:fontFamily="@font/merriweather_bold"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/msgoutros"
        app:layout_constraintTop_toTopOf="@+id/msgoutros" />

    <TextView
        android:id="@+id/nomeuser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather_bold"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="12dp"
        android:maxWidth="130dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/msguser"
        app:layout_constraintTop_toTopOf="@+id/msguser" />

</androidx.constraintlayout.widget.ConstraintLayout>