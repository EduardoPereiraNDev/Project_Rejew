<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/msguser"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/borda_msg_chat"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeuser1"
        />

    <View
        android:id="@+id/msgoutros"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/borda_msg_chat"
        android:layout_marginStart="32dp"
        android:padding="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeuser2" />

    <TextView
        android:id="@+id/nomeuser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/msgoutros"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/conteudouser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/msgoutros"
        app:layout_constraintTop_toTopOf="@+id/msgoutros" />

    <TextView
        android:id="@+id/conteudouser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/msguser"
        app:layout_constraintTop_toTopOf="@+id/msguser" />

    <TextView
        android:id="@+id/nomeuser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/msguser"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>